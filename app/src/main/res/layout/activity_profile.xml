<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_DisplayName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    tools:context="com.example.divindivakaran.myaichat.ProfileActivity">

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Display Name"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/profile_display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/profile_send_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="SEND FRIEND REQUEST"
        android:layout_below="@+id/profile_status"
        android:layout_marginTop="11dp"
        android:layout_alignStart="@+id/profile_decline_friend_btn"
        android:layout_alignEnd="@+id/profile_decline_friend_btn" />

    <Button
        android:id="@+id/profile_decline_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/profile_send_request_btn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
